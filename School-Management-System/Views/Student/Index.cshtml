@model IEnumerable<School_Management_System.Models.Student>

<a asp-action="Create" class="btn btn-info">Create</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"> @Html.DisplayNameFor(st=>st.Id) </th>
            <th scope="col"> @Html.DisplayNameFor(st=>st.FirstName) </th>
            <th scope="col"> @Html.DisplayNameFor(st=>st.LastName) </th>
            <th scope="col"> @Html.DisplayNameFor(st=>st.FathersName) </th>
            <th scope="col"> @Html.DisplayNameFor(st=>st.MothersName) </th>
            <th scope="col"> @Html.DisplayNameFor(st=>st.StudentId) </th>
            <th scope="col"> @Html.DisplayNameFor(st=>st.Class) </th>

            <th scope="col"> Action </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row"> @Html.DisplayFor(st=>item.Id) </th>
                <td>@Html.DisplayFor(st=>item.FirstName)</td>
                <td>@Html.DisplayFor(st=>item.LastName)</td>
                <td>@Html.DisplayFor(st=>item.FathersName)</td>
                <td>@Html.DisplayFor(st=>item.MothersName)</td>
                <td>@Html.DisplayFor(st=>item.StudentId)</td>
                <td>@Html.DisplayFor(st=>item.Class)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>